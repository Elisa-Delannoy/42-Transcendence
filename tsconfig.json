{
  "compilerOptions": {
    /* ===== Sortie & Structure ===== */
    "rootDir": "./back",
    "outDir": "./dist",

    /* ===== Cible & Modules ===== */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* ===== TypeScript / Node ===== */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    /* ===== Autres Options ===== */
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,

    /* ===== Vérifications Avancées ===== */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ===== Exclusions ===== */
    "isolatedModules": true
  },
  "include": ["back/**/*.ts"],
  "exclude": ["node_modules"]
}

