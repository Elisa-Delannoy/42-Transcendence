{
  "compilerOptions": {
    "target": "ES2020",            // JS moderne
    "module": "ESNext",            // modules ES pour front et back
    "moduleResolution": "Node",    // résolution des imports à la Node
    "rootDir": ".",                 // racine du projet
    "outDir": "dist",               // dossier JS compilé
    "strict": true,                 // toutes les vérifications TS
    "esModuleInterop": true,        // compatibilité require/import
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,              // pour debugger
    "declaration": true,            // génère les fichiers .d.ts
    "resolveJsonModule": true
  },
  "include": [
    "back/**/*.ts",
    "front/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "front/public"
  ]
}
